{
  "manifest_version": 3,
  "name": "Google Meet - Live Captions",
  "version": "1.0.0",
  "description": "Capture Google Meet live captions in a side panel. Review, search, download, and re-upload transcripts in real-time â€” with a built-in AI assistant.",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "identity"
  ],
  "oauth2": {
    "client_id": "__GOOGLE_CLIENT_ID__",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "host_permissions": [
    "*://meet.google.com/*"
  ],
  "optional_host_permissions": [
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Google Meet - Live Captions"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
